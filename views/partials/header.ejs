<!DOCTYPE html>
<html>
    <head>
        <title>YelpHutte</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/campgrounds">YelpHutte</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <% if(!currentUser) { %>
                            <form class="form-inline" method="POST">
                              <div class="form-group">
                                <input type="text" class="form-control" name="username" placeholder="Username">
                                <input type="password" class="form-control" name="password" placeholder="Password">
                                <button type="submit" formaction="/login" class="btn btn-sm">
                                    <span class="glyphicon glyphicon-lock"></span>
                                    Log in
                                </button>
                                 <span>or</span>
                                 <button type="submit" formaction="/register" class="btn btn-sm btn-info">Sign Up</button>
                              </div>
                              
                            </form>
                         <% } else { %>
                            <li><a>Signed In As <%= currentUser.username %></a></li>
                            <li><a href="/logout">Log Out</a></li>
                         <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    
    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-warning" role="alert"><%= error %></div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert"><%= success %></div>
        <% } %>
        <% if(info && info.length > 0){ %>
            <div class="alert alert-info" role="alert"><%= info %></div>
        <% } %>
    </div>
    