<% include ../partials/header %>
<div class="container">
    <div class=row>
        <h2 style="text-align: center">Edit <%= campground.name %></h2>
        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds/<%= campground._id %>" method="POST" enctype="multipart/form-data">
                <div class="form-group"><input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]"></div>
                <div class="form-group"><input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01"></div>
                <div class="form-group"><input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]"></div>
                <div class="form-group"><input class="form-control" type="file" name="upImage"></div>
                <div class="thumbnail form-group" >
                    <% var img = campground.uploadPath || campground.image %>
                    <img src="<%= img %>">
                </div>
                <div class="form-group"><textarea class="form-control" name="campground[description]"><%= campground.description %></textarea></div>
                <div class="form-group"><button class="btn-lg btn-primary btn-block">Submit</button></div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>